{
  "manifest_version": 2,

  "name": "Open Last Tab",
  "description": "Cycle through last used Chrome tabs using keyboard shortcut.",
  "version": "1.0",
  "short_name": "OLT",

  "permissions": [
    "tabs"
  ],
  "content_security_policy" : "script-src 'self'; object-src 'self'",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "background":{
    "scripts" : ["background.js"]
  },
  "commands": {
    "alt_switch_fast": {
      "suggested_key": {  
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Quick switch - Use to switch quickly among last 2 to 4 tabs. (Suggested: Alt+Q)"
    },

    "alt_switch_slow_backward": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Normal switch backward (Suggested: Alt+S) "
    },

    "alt_switch_slow_forward": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Normal switch forward (Suggested: Alt+Shift+S)"
    }
  },

  "browser_action": {
    "default_icon": "icon16.png"
  }
}